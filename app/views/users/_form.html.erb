<%= form_for @user, :html => { :class => "form-horizontal user" } do |f| %>

    <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-12">
      <div class="control-group col-sm-6">
        <%= f.label :fname, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :fname, required: true, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:fname]) %>
      </div>
      <div class="control-group col-sm-6">
        <%= f.label :lname, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :lname, required: true,:class => 'form-control' %>
        </div>
        <%= error_span(@user[:lname]) %>
      </div>
    </div>
  </div> 
  <div class="row">
    <div class="col-sm-12">     
      <div class="control-group col-sm-6">
        <%= f.label :location_id, :class => 'control-label' %>
        <div class="controls">
          <%= f.select :location_id, Location.all.map{|l| [l.name,l.id]},{include_blank: false},{required: true,:class => 'form-control'} %>
        </div>
        <%= error_span(@user[:location_id]) %>
      </div>
      <div class="control-group col-sm-6">
        <%= f.label :email, required: true,:class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :email, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:email]) %>
      </div>
    </div>
  </div>
    <div class="row">
    <div class="col-sm-12">    
      <div class="control-group col-sm-6">
        <%= f.label :password, :class => 'control-label' %>
        <div class="controls">
          <%= f.password_field :password, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:password]) %>
      </div>
      <div class="control-group col-sm-6">
        <%= f.label :password_confirmation, :class => 'control-label' %>
        <div class="controls">
          <%= f.password_field :password_confirmation, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:password_confirmation]) %>
      </div>
    </div>
  </div>  
</br>
  <div class="row">
    <div class="col-sm-12">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            users_path, :class => 'btn btn-default' %>
    </div>
  </div>          

<% end %>
