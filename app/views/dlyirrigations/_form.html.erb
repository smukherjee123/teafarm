<%= form_for @dlyirrigation do |f| %>

    <% if @dlyirrigation.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@dlyirrigation.errors.count, "error") %> prohibited this dlyirrigation from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @dlyirrigation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
<div class="row">
  <div class="col-sm-12">
    <div class="control-group col-sm-3">
      <%= f.label "Date Of Operation", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :date, 'data-behaviour' => 'datepicker',class: "form-control ",required: true,:style=>'width:140px;'%>
      </div>
      <%= error_span(@dlyirrigation[:date]) %>
    </div>
    <div class="control-group col-sm-3">
      <%= f.label "Irrigation Set" , :class => 'control-label' %>
      <div class="controls">
        <%= f.select :irriset_id, Irriset.all.map{|set| [set.setname,set.id]},{include_blank: false},{required: true,:class => 'form-control'} %>
      </div>
      <%= error_span(@dlyirrigation[:irriset_id]) %>
    </div>
    <div class="control-group col-sm-3">
      <%= f.label "Section", :class => 'control-label' %>
      <div class="controls">
        <%= f.select :section_id, Section.all.map{|set| [set.name,set.id]},{include_blank: false},{required: true,:class => 'form-control'} %>
      </div>
      <%= error_span(@dlyirrigation[:section_id]) %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">    
    <div class="control-group col-sm-3">
      <%= f.label "Running Hour", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :runhr, required: true,:class => 'form-control' %>
      </div>
      <%= error_span(@dlyirrigation[:runhr]) %>
    </div>
    <div class="control-group col-sm-3">
      <%= f.label "Area Cover", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :arearun, required: true,:class => 'form-control' %>
      </div>
      <%= error_span(@dlyirrigation[:arearun]) %>
    </div>
    <div class="control-group col-sm-3">
      <%= f.label "Cost of Irrigation", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :irricost, :class => 'form-control' %>
      </div>
      <%= error_span(@dlyirrigation[:irricost]) %>
    </div>

    <div class="control-group col-sm-3">
      <%= f.label "Rainfall In Inches" , :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :rainfall, :class => 'form-control' %>
      </div>
      <%= error_span(@dlyirrigation[:rainfall]) %>
    </div>
  </div>
</div> 
<div class="row">
  <div class="col-sm-12"> 
    <div class="control-group col-sm-12">
      <%= f.label "Remarks If Any", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :remarks, :class => 'form-control' %>
      </div>
      <%= error_span(@dlyirrigation[:remarks]) %>
    </div>
  </div>
</div>    
<br/>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            dlyirrigations_path, :class => 'btn btn-default' %>

<% end %>