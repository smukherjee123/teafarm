<%- model_class = Dlyirrigation -%>
<div class="page-header">
  <h1>Daily Irrigation Details Entry</h1>
</div>
<table class="table table-condensed table-striped table-bordered table-responsive">
  <thead>
    <tr>
      <th>Date Of Operation</th>
      <th>Set Details</th>
      <th>Section</th>
      <th>Running Hour</th>
      <th>Area Covered</th>
      <th>Cost Of Irrigation</th>
      <th>Rainfall Inches</th>
      <th>Remarks If Any</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @dlyirrigations.each do |dlyirrigation| %>
      <tr>
        <td><%= dlyirrigation.date %></td>
        <td><%= dlyirrigation.irriset.setname %></td>
        <td><%= dlyirrigation.section.name %></td>
        <td><%= dlyirrigation.runhr %></td>
        <td><%= dlyirrigation.arearun %></td>
        <td><%= dlyirrigation.irricost %></td>
        <td><%= dlyirrigation.rainfall %></td>
        <td><%= dlyirrigation.remarks %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_dlyirrigation_path(dlyirrigation), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      dlyirrigation_path(dlyirrigation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_dlyirrigation_path,
            :class => 'btn btn-primary' %>
