<%= form_for @section, :html => { :class => "form-horizontal section" } do |f| %>

    <% if @section.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @section.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-12">
      <div class="control-group col-sm-6">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :name, required: true,:class => 'form-control' %>
        </div>
        <%= error_span(@section[:name]) %>
      </div>
      <div class="control-group col-sm-6">
        <%= f.label :area, required: true,:class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :area, :class => 'form-control' %>
        </div>
        <%= error_span(@section[:area]) %>
      </div>
    </div>
  </div> 
  <div class="row">
    <div class="col-sm-12">     
      <div class="control-group col-sm-6">
        <%= f.label :div, required: true,:class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :div, :class => 'form-control' %>
        </div>
        <%= error_span(@section[:div]) %>
      </div>

      <div class="control-group col-sm-6">
        <%= f.label :location_id, :class => 'control-label' %>
        <div class="controls">
          <%= f.select :location_id, Location.all.map{|l| [l.name,l.id]},{include_blank: false},{required: true,:class => 'form-control'} %>
        </div>
        <%= error_span(@section[:location_id]) %>
      </div>
    </div>
  </div>    
</br>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            sections_path, :class => 'btn btn-default' %>

<% end %>
